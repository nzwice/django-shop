  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Django Command: seed product suggestions to Redis",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["seed_products_suggestion"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Django Command: seed sample data to db",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["seed_sample_data", "--json=${workspaceFolder}/shop.json"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
